<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Transactions by Branch</title>

    <!-- Favicons -->
    <link rel="icon" href="images/p.jpg" type="image/gif" />

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com" rel="preconnect">
    <link href="https://fonts.gstatic.com" rel="preconnect" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="/assets/vendor/aos/aos.css" rel="stylesheet">
    <link href="/assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

    <!-- Main CSS File -->
    <link href="/assets/css/main.css" rel="stylesheet">
</head>

<body class="index-page">
    <!-- Header -->
    <header id="header" class="header dark-background d-flex flex-column">
        <i class="header-toggle d-xl-none bi bi-list"></i>
        <a href="/admindashboard" class="logo d-flex align-items-center justify-content-center">
            <h1 class="sitename">Admin Dashboard</h1>
        </a>
        <nav id="navmenu" class="navmenu">
            <ul>
                <li><a href="/admindashboard"><i class="bi bi-house navicon"></i> Home</a></li>
                <li><a href="/addManager"><i class="bi bi-person-plus navicon"></i> Add Admin</a></li>
                <li><a href="/transactions-by-branch" class="active"><i class="bi bi-folder navicon"></i> Transactions by Branch</a></li>
                <li><a href="/logout"><i class="bi bi-box-arrow-right navicon"></i> Logout</a></li>
            </ul>
        </nav>
    </header>

    <!-- Main Content -->
    <main class="main">
        <section id="dashboard" class="section light-background">
            <div class="container" data-aos="fade-up">
                <h2 class="section-title text-center">Transactions by Branch</h2>
                <div class="accordion mt-4" id="branchTransactionsAccordion">
                    <% for (const branch in transactionsByBranch) { %>
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="heading-<%= branch %>">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-<%= branch %>" aria-expanded="false" aria-controls="collapse-<%= branch %>">
                                    <%= branch %>
                                </button>
                            </h2>
                            <div id="collapse-<%= branch %>" class="accordion-collapse collapse" aria-labelledby="heading-<%= branch %>" data-bs-parent="#branchTransactionsAccordion">
                                <div class="accordion-body">
                                    <% if (transactionsByBranch[branch] && transactionsByBranch[branch].length > 0) { %>
                                        <table class="table table-bordered table-striped">
                                            <thead>
                                                <tr>
                                                    <th>Transaction ID</th>
                                                    <th>Client Name</th>
                                                    <th>Package Name</th>
                                                    <th>Amount</th>
                                                    <th>Date</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% transactionsByBranch[branch].forEach(transaction => { %>
                                                    <tr>
                                                        <td><%= transaction._id %></td>
                                                        <td><%= transaction.clientName %></td>
                                                        <td><%= transaction.packageName %></td>
                                                        <td>$<%= transaction.paymentAmount.toFixed(2) %></td>
                                                        <td><%= new Date(transaction.createdAt).toLocaleDateString() %></td>
                                                    </tr>
                                                <% }); %>
                                            </tbody>
                                        </table>
                                    <% } else { %>
                                        <p>No transactions for this branch.</p>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    <% } %>                    
                </div>
            </div>
        </section>
    </main>

    <!-- Footer -->
    <footer id="footer" class="footer position-relative light-background">
        <div class="container text-center">
            <p>Â© <strong>Admin Dashboard</strong> All Rights Reserved.</p>
            <p>Designed with <a href="https://bootstrapmade.com/">iPortfolio Template</a>.</p>
        </div>
    </footer>

    <!-- Scroll Top -->
    <a href="#" id="scroll-top" class="scroll-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Vendor JS Files -->
    <script src="/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/assets/vendor/aos/aos.js"></script>
    <script src="/assets/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="/assets/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="/assets/vendor/typed.js/typed.umd.js"></script>
    <script src="/assets/vendor/purecounter/purecounter_vanilla.js"></script>

    <!-- Main JS File -->
    <script src="/assets/js/main.js"></script>
</body>

</html>
